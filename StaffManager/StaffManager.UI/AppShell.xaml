<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StaffManager.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StaffManager.UI"
    xmlns:pages="clr-namespace:StaffManager.UI.Pages">

    <ShellContent
        Title="Главная"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Должности"
        ContentTemplate="{DataTemplate pages:Positions}"
        Route="Positions" />

</Shell>
